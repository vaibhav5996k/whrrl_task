<div class="card-dashboard">
    <div class="dasboard-container">
        <h5>
            <b> Welcome,<br>
                {{fullname}}</b>
        </h5>
        <div class="row row-image">
            <img class="dash-image" style="height: 200px; width:200px" src="{{imgurl}}">
        </div>
        <div class="form-container" id='formDiv'>
            <form class="pure-form pure-form-stacked">
                <fieldset>
                    <legend>
                        <h6><b>Kindly help us with the following information</b></h6>
                    </legend>
                    <div class="pure-g">
                        <div class="pure-u-1 pure-u-md-1-2">
                            <label for="multi-full-name">Full Name</label>
                            <input type="text" id="multi-full-name" class="pure-u-1" />
                        </div>
                        <div class="pure-u-1 pure-u-md-1-2">
                            <label for="multi-email">E-Mail</label>
                            <input type="email" id="multi-email" class="pure-u-1" required="" />
                        </div>
                        <div class="pure-u-1 pure-u-md-1-2">
                            <label for="multi-mobile-number">Mobile Number</label>
                            <input type="text" id="multi-mobile-number" class="pure-u-1" />
                        </div>
                        <div class="pure-u-1 pure-u-lg-1-2">
                            <label for="multi-nationality">Nationality</label>
                            <select id="multi-nationality" class="pure-input-1">
                                <option>India</option>
                                <option>UK</option>
                                <option>USA</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="pure-button pure-button-primary">Submit</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>